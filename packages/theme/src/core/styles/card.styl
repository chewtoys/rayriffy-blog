@import './commons.styl'

/* Global Styles */
a
  color #536a90
  text-decoration none
  cursor pointer
  @media (prefers-color-scheme: dark)
    color rgb(21, 142, 255)

h1, h2, h3, h4, h5, h6 {
  font-weight 400
  margin 35px 0 25px 0

p, ol, li, table > tbody > tr > td
  padding 0 25px
  getFontColor(lightColor = true)

pre
  padding 30px
  background #fff
  font 12px / 18px Consolas, monospace, serif
  color #6f6f6f
  tab-size 4
  overflow auto
  border 1px solid #eeeeee
  border-radius 3px
  @media (prefers-color-scheme: dark)
    border 1px solid #424242
    background #212121
    color #f5f5f5

:not(pre) > code
  font-size 12px
  color #f0615c
  white-space pre-wrap
  padding 1px 6px 3px 6px
  border 1px solid #eeeeee
  border-radius 3px
  @media (prefers-color-scheme: dark)
    background #292d34
    color #ef596f

.gria-image
  box-shadow inset 0px 0px 0px 400px rgb(255, 255, 255) !important
  @media (prefers-color-scheme: dark)
    box-shadow inset 0px 0px 0px 400px rgb(60, 60, 60) !important
  
.gria-image-wrapper
  margin: 0 -25px !important

@media only screen and (max-width: 40em)
  p
    padding 0

  .gria-image-wrapper
    margin 0 !important

/* Component style */
.core-card
  getBackground(lightColor: true)
  getShadow('xl')
  border-radius 6px
  overflow hidden
  & > .meta
    padding getSpace(4)
    .post
      padding getSpace(4) getSpace(4)
      @media (max-width: 40em)
        padding getSpace(4) getSpace(5)
    & > .blog-title, & > * > .blog-title
      getFontFamily('heading')
      font-weight 400
      font-size 38px
      .listing
        font-size 26px
          @media (max-width: 40em)
            font-size 28px
          @media (max-width: 64em)
            font-size 30px
      .post
        font-size 30px
          @media (max-width: 40em)
            font-size 32px
          @media (max-width: 52em)
            font-size 34px
          @media (max-width: 64em)
            font-size 36px
    & > .date-author
      margin-top getSpace(3)
      font-size 14px
      @media (max-width: 40em)
        font-size 16px
      & > a
        color rgba(0, 0, 0, 0.8)
        @media (prefers-color-scheme: dark)
          color rgb(255, 255, 255)
    & > .subtitle
      margin-top getSpace(3)
      font-size 16px
      @media (max-width: 40em)
        font-size 17px
